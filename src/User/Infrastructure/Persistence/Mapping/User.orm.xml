<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="User\Domain\Model\User" table="user">
        <id name="id" type="integer">
            <generator />
        </id>
        <field name="username" column="username" length="180" unique="true"/>
        <field name="roles" column="roles" type="array" length="65535"/>
        <field name="password" column="password" length="255"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
